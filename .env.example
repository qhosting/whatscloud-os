# --- SERVER CONFIG ---
PORT=3000
NODE_ENV=production

# --- SECURITY ---
# Secret key for signing JWT tokens. Use a long random string.
JWT_SECRET=production_secret_key_change_me_immediately

# --- DATABASES ---
# PostgreSQL Connection String
DATABASE_URL=postgres://user:password@host:5432/database
# MongoDB Connection String
MONGO_URL=mongodb://host:27017/database
# Redis Connection String (for Bull Queues & Session)
REDIS_URL=redis://host:6379

# --- AI & SCRAPING ---
# Google Gemini API Key
API_KEY=AIzaSy...
# Proxy for Puppeteer (Optional but Recommended)
PROXY_SERVER=http://proxy.example.com:8080
PROXY_USERNAME=user
PROXY_PASSWORD=pass

# --- INTEGRATIONS ---
# WhatsApp Webhook Destination (WAHA API)
WAHA_API_URL=http://waha:3000/api

# VoIP (Asterisk Manager Interface)
AMI_HOST=pbx.example.com
AMI_PORT=5038
AMI_USER=admin
AMI_SECRET=secret
